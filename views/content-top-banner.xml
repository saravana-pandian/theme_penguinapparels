<odoo>
<template id="s_product_banner" name="product banner">
    <section class="s_call_to_action o_cc  pt48 pb24 o_colored_level">
        <div class="contact-banner">
        <picture>
              <source media="(max-width: 991px) and (min-width: 768px)" srcset="/theme_penguin_apparels/static/src/images/Banner-Tablet-View.jpg">
                <source media="(min-width: 991px)" srcset="/theme_penguin_apparels/static/src/images/Banner-Web-View.png">
                  <source media="(max-width: 768px)" srcset="/theme_penguin_apparels/static/src/images/Banner-Mobile-View.jpg">
                    <img src="/theme_penguin_apparels/static/src/images/Banner-Web-View.png" alt="footer banner image"/>
                    </source>
                </source>
              </source>
            </picture>          
            <h1 class="primary-heading banner-center">Our Products</h1>
        </div>
      </section>
</template>
<template id="place_into_product_banner" inherit_id="website.snippets" name="Place into product banner">
    <xpath expr="//div[@id='snippet_structure']/div[hasclass('o_panel_body')]" position="inside">
        <t t-snippet="theme_penguin_apparels.s_product_banner" t-thumbnail="/theme_penguin_apparels/static/src/images/logos/PenguinApparels-Logo.png"/>
    </xpath>
</template>
</odoo>
