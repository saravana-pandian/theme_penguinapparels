<odoo>
<template id="s_content_foot_banner" name="foot banner">
    <section class="centered-content s_call_to_action o_cc  pt48 pb48 o_colored_level">
    <div class="container">
      <div class="row">
            <div class="col-lg-9 pb16 o_colored_level">
              <h3 class="primary-heading">We ship to 26+ Countries as We are talking</h3>
                </div>
            <div class="col-lg-3 pt8 o_colored_level">
              <p class="centered-content">
                <a href="/contactus" class="primary-button">Talk to us</a>
              </p>
            </div>
          </div>
    </div>
        <div class="footbanner">
        <picture>
              <source media="(max-width: 991px) and (min-width: 768px)" srcset="/theme_penguin_apparels/static/src/images/Footer-Banner-Tablet-View.jpg">
                <source media="(min-width: 991px)" srcset="/theme_penguin_apparels/static/src/images/Footer-Banner-Web_View.png">
                  <source media="(max-width: 768px)" srcset="/theme_penguin_apparels/static/src/images/Footer-Banner-Mobile-View.jpg">
                    <img src="/theme_penguin_apparels/static/src/images/Footer-Banner-Web_View.png" alt="footer banner image"/>
                    </source>
                </source>
              </source>
            </picture>
          <img src="/theme_penguin_apparels/static/src/images/Footer-Banner-Web_View.png" alt="footer banner image"/>
        </div>
      </section>
</template>
<template id="place_into_seven" inherit_id="website.snippets" name="Place into seven">
    <xpath expr="//div[@id='snippet_structure']/div[hasclass('o_panel_body')]" position="inside">
        <t t-snippet="theme_penguin_apparels.s_content_foot_banner" t-thumbnail="/theme_penguin_apparels/static/src/images/logos/PenguinApparels-Logo.png"/>
    </xpath>
</template>
</odoo>
