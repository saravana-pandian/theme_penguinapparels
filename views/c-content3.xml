<odoo>

<template id="s_contact_page_form" name="contact page forms">

            
            
        <section class="s_website_form pt16 pb16 o_colored_level" data-vcss="001" data-snippet="s_website_form" data-name="Form">
          <div class="container">
        
          
           <div class="row align-items-center">
            <div class="col-lg-6 pt16 pb16 o_colored_level">
            <form action="/website_form/" method="post" enctype="multipart/form-data" class="o_mark_required" data-mark="*" data-success-mode="redirect" data-success-page="/contactus-thank-you" data-model_name="mail.mail">
              <div class="s_website_form_rows row s_col_no_bgcolor">
                <div class="form-group s_website_form_field col-12    s_website_form_dnone" data-name="Field">
                  <div class="row s_col_no_resize s_col_no_bgcolor">
                    <label class="col-form-label col-sm-auto s_website_form_label " style="width: 200px">
                      <span class="s_website_form_label_content"/>
                      <span title="Separate email addresses with a comma.">
                        <i class="fa fa-info-circle"/>
                      </span>
                    </label>
                    <div class="col-sm">
                      <input type="hidden" class="form-control s_website_form_input" name="email_to" value="info@yourcompany.example.com"/>
                    </div>
                  </div>
                </div>
                <div class="form-group s_website_form_field col-12 s_website_form_custom s_website_form_required  " data-type="char" data-name="Field">
                  <div class="row s_col_no_resize s_col_no_bgcolor">
                    <label class="col-form-label col-sm-auto s_website_form_label " style="width: 200px" for="61s2gqondrn">
                      <span class="s_website_form_mark"> <h2 class="primary-heading"> Send Us Your</h2> </span>
                    </label>
                    <div class="col-sm">
                      <input type="text" class="form-control s_website_form_input" name="Your Name" required="1" id="61s2gqondrn"/>
                    </div>
                  </div>
                </div>
                
                <div class="form-group s_website_form_field col-12  s_website_form_model_required  " data-type="email" data-name="Field">
                  <div class="row s_col_no_resize s_col_no_bgcolor">
                    <label class="col-form-label col-sm-auto s_website_form_label " style="width: 200px" for="ta3ydolt6m">
                      <span class="s_website_form_mark"> <h2 class="primary-heading"> Messages</h2> </span>
                    </label>
                    <div class="col-sm">
                      <input type="email" class="form-control s_website_form_input" name="email_from" required="true" id="ta3ydolt6m"/>
                    </div>
                  </div>
                </div>
    
                
                <div class="form-group s_website_form_field col-12 s_website_form_custom s_website_form_required  " data-type="text" data-name="Field">
                  <div class="row s_col_no_resize s_col_no_bgcolor">
                    <label class="col-form-label col-sm-auto s_website_form_label " style="width: 200px" for="5t1i7xa5j7q">
                      <span class="s_website_form_mark"><p class="primary-paragraph"> Send your feed back AND enquires and feel free to message us</p> </span>
                    </label>
                    <div class="col-sm">
                      <textarea class="form-control s_website_form_input" name="Your Question" required="1" id="5t1i7xa5j7q" rows="3"/>
                    </div>
                  </div>
                </div>
                <div class="form-group col-12 s_website_form_submit" data-name="Submit Button">
                  <div style="width: 200px;" class="s_website_form_label"/>
                  <a href="#" role="button" class="primary-button pt16 btn-lg s_website_form_send o_default_snippet_text">Submit</a>
                  <span id="s_website_form_result"/>
                </div>
              </div>
            </form>
            </div>
          
          </div>
          </div>
        </section>
</template>


<template id="place_into_contactdeta" inherit_id="website.snippets" name="Place into contactdet">
    <xpath expr="//div[@id='snippet_structure']/div[hasclass('o_panel_body')]" position="inside">
        <t t-snippet="theme_penguin_apparels.s_content_contact_form"
                t-thumbnail="/theme_penguin_apparels/static/src/images/Banner-Mobile-View.jpg"/>
    </xpath>
</template>

</odoo>
